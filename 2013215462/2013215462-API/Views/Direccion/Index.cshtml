@model IEnumerable<_2013215462_ENT.Direccion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Direccion", "Create")
</p>
<table id="tbl_Direccion" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Direccion ID:</th>
            <th>CentroAtencion ID:</th>
            <th>Distrito ID:</th>



        </tr>

    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document)
        .ready(function () {
            var table = $("#tbl_Direccion")
            .DataTable({
                ajax: {
                    url: "/API/Direccion",
                    dataSrc: ""
                },

                columns: [
                    { data: "DireccionID" },
                    { data: "CentroAtencion.CentroAtencionID" },
                    { data: "Distrito.DistritoID" },


                    {
                        data: "DireccionID",
                        render: function (data, type, Direccion) {
                            return "<a href = '/Direccion/update/" + data + "'>Actualizar</a>";
                        }

                    },
                    {

                        data: "DireccionID",
                        render: function (data, type, Direccion) {
                            return "<a href = '/Direccion/details/" + data + "'>Detalles</a>";
                        }
                    },

                    {
                        data: "DireccionID",
                        render: function (data) {
                            return "<button class= 'btn btn-link js-delete' data-Direccion-ID=" + data + ">Borrar</button>"
                        }
                    }
                ]
            });
        });



    </script>


}

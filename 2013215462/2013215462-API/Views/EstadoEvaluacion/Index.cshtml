@model IEnumerable<_2013215462_ENT.EstadoEvaluacion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo EstadoEvaluacion", "Create")
</p>
<table id="tbl_EstadoEvaluacion" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>EstadoEvaluacion ID:</th>
            <th>Evaluacion ID:</th>
        </tr>

    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document)
        .ready(function () {
            var table = $("#tbl_EstadoEvaluacion")
            .DataTable({
                ajax: {
                    url: "/API/EstadoEvaluacion",
                    dataSrc: ""
                },

                columns: [
                    { data: "EstadoEvaluacionID" },
                    { data: "Evaluacion.EvaluacionID" },


                    {
                        data: "EstadoEvaluacionID",
                        render: function (data, type, EstadoEvaluacion) {
                            return "<a href = '/EstadoEvaluacion/update/" + data + "'>Actualizar</a>";
                        }

                    },
                    {

                        data: "EstadoEvaluacionID",
                        render: function (data, type, EstadoEvaluacion) {
                            return "<a href = '/EstadoEvaluacion/details/" + data + "'>Detalles</a>";
                        }
                    },

                    {
                        data: "EstadoEvaluacionID",
                        render: function (data) {
                            return "<button class= 'btn btn-link js-delete' data-EstadoEvaluacion-ID=" + data + ">Borrar</button>"
                        }
                    }
                ]
            });
        });



    </script>


}

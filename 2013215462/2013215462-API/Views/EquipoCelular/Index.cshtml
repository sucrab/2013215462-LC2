@model IEnumerable<_2013215462_ENT.EquipoCelular>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo EquipoCelular", "Create")
</p>
<table id="tbl_EquipoCelular" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>EquipoCelular ID:</th>
            <th>AdministradorEquipo ID:</th>
            <th>Evaluacion ID:</th>
        </tr>

    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document)
        .ready(function () {
            var table = $("#tbl_EquipoCelular")
            .DataTable({
                ajax: {
                    url: "/API/EquipoCelular",
                    dataSrc: ""
                },

                columns: [
                    { data: "EquipoCelularID" },
                    { data: "AdministradorEquipo.AdministradorEquipoID" },
                    { data: "Evaluacion.EvaluacionID" },


                    {
                        data: "EquipoCelularID",
                        render: function (data, type, EquipoCelular) {
                            return "<a href = '/EquipoCelular/update/" + data + "'>Actualizar</a>";
                        }

                    },
                    {

                        data: "EquipoCelularID",
                        render: function (data, type, EquipoCelular) {
                            return "<a href = '/EquipoCelular/details/" + data + "'>Detalles</a>";
                        }
                    },

                    {
                        data: "EquipoCelularID",
                        render: function (data) {
                            return "<button class= 'btn btn-link js-delete' data-EquipoCelular-ID=" + data + ">Borrar</button>"
                        }
                    }
                ]
            });
        });



    </script>


}
